<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mjjm.phraseword" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- VARIATION ONE -->
        <activity
            android:name=".variation1.Variation1"
            android:label="@string/title_activity_variation1" >

            <!--
                android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mjjm.phraseword.MainActivity" />
            -->
        </activity>
        <activity
            android:name=".variation1.VariationOneTestScreenActivity"
            android:label="@string/title_activity_variation_one_test_screen"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>
        <!-- VARIATION TWO -->
        <activity
            android:name=".variation2.Variation2"
            android:label="@string/title_activity_variation2"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mjjm.phraseword.MainActivity" />
        </activity>
        <activity
            android:name=".variation2.VariationTwoTestScreenActivity"
            android:label="@string/title_activity_variation_two_test_screen"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>
        <!-- VARIATION THREE -->
        <activity
            android:name=".variation3.Variation3"
            android:label="@string/title_activity_variation3"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mjjm.phraseword.MainActivity" />
        </activity>
        <activity
            android:name=".variation3.VariationThreeTestScreen"
            android:label="@string/title_activity_variation_three_test_screen"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>
        <!-- VARIATION FOUR -->
        <activity
            android:name=".variation4.Variation4"
            android:label="@string/title_activity_variation4"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mjjm.phraseword.MainActivity" />
        </activity>
        <activity
            android:name=".variation4.VariationFourTestScreenActivity"
            android:label="@string/title_activity_variation_four_test_screen"
            android:parentActivityName=".variation4.Variation4"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>
        <!-- UNLOCKED SCREEN -->
        <activity
            android:name=".UnlockedScreenActivity"
            android:label="@string/title_activity_unlocked_screen"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <!-- TEST FORM -->
        <activity
            android:name=".TestFormActivity"
            android:label="@string/title_activity_test_form" >
        </activity>
    </application>

</manifest>
