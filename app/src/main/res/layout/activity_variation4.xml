<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/teal"
    tools:context="org.mjjm.phraseword.variation4.Variation4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Variation 4"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>


    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Instructions"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/editCharCode"
        android:hint="Enter your character code"
        android:textColorHint="@android:color/white"
        android:singleLine="true"
        android:lines="1"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:layout_marginBottom="20dp"
        android:padding="5dp"/>


    <TextView
        android:id="@+id/textProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="PROCEED TO TEST"
        android:padding="20dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>
